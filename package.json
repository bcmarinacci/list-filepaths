{
  "name": "list-filepaths",
  "version": "1.6.0",
  "description": "Asynchronously list the paths of all files in a directory and its subdirectories",
  "engines": {
    "node": "^7.8.0",
    "npm": "^4.4.4"
  },
  "main": "index.js",
  "scripts": {
    "lint": "eslint index.js lib __tests__",
    "lint-fix": "npm run lint -- --fix",
    "test": "jest && npm run lint",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "asynchrouous",
    "dir",
    "directory",
    "dirpath",
    "list",
    "file",
    "filepath",
    "path",
    "subdirectory",
    "tree"
  ],
  "author": "Benjamin Marinacci",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcmarinacci/list-filepaths.git"
  },
  "bugs": {
    "url": "https://github.com/bcmarinacci/list-filepaths/issues"
  },
  "files": [
    "lib",
    "index.js"
  ],
  "dependencies": {
    "lodash.flattendeep": "^4.4.0"
  },
  "devDependencies": {
    "coveralls": "^2.13.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "jest": "^19.0.2",
    "mkdirp": "^0.5.1"
  },
  "jest": {
    "bail": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/coverage/",
      "<rootDir>/fixtures/",
      "<rootDir>/node_modules/"
    ]
  }
}
